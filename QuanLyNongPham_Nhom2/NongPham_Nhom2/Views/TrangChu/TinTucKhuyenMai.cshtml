@using NongPham_Nhom2.Models
@model List<KhuyenMai_>
@{
    ViewBag.Title = "DangNhap";
    Layout = "~/Views/Shared/_DangKyLayout.cshtml";
}
<link href="~/NongPham/css/css/bootstrap.css" rel="stylesheet" />
<div style="border-radius:30px;" class="bg-light border border-success">
    <div class="col text-center pt-3"><div class="text-uppercase text-success font-weight-bold border-bottom border-success " style="font-size:40px;">TIN TỨC KHUYẾN MÃI</div></div>

    @foreach (var item in Model)
    {
        <div class="row mt-3 ml-2 pb-3">
            <div class="col">

                <a href="@Url.Action("ChiTietKhuyenMai", "KhuyenMai", new { MaKM=item.MaKM },null)">
                    <img class="w-100" src="~/NongPham/Images/@item.AnhKM" />
                </a>

            </div>
            <div class="col-9">
                <h3 class="text-danger font-weight-bold">@item.TenKM</h3>
                <div class="text-dark">

                    @item.MoTa
                </div>
                <div>Nhập mã @item.TenKM để được giảm giá đến @item.GiaGiam<span>đ</span></div>
                <a href="@Url.Action("ChiTietKhuyenMai", "KhuyenMai", new { MaKM=item.MaKM },null)">
                    Xem chi tiết
                </a>
            </div>
        </div>
    }
</div>
<br /> <br />

