@model IEnumerable<NongPham_Nhom2.Models.SanPham_>
@{
    ViewBag.Title = "SanPhamTheoNhaCungCap";
    Layout = "~/Views/Shared/_NPLayout.cshtml";
}
<style>
    .hovertext-green {
        position: relative;
        border-bottom: 1px dotted black;
    }

        .hovertext-green:before {
            content: attr(data-hover);
            visibility: hidden;
            opacity: 0;
            width: 140px;
            background-color: black;
            color: #fff;
            text-align: center;
            border-radius: 5px;
            padding: 5px 0;
            transition: opacity 1s ease-in-out;
            position: absolute;
            z-index: 1;
            left: 0;
            top: 110%;
        }

        .hovertext-green:hover:before {
            opacity: 1;
            visibility: visible;
        }

</style>
<link href='https://fonts.googleapis.com/css?family=Lora' rel='stylesheet'>
<link href="~/NongPham/css/css/bootstrap.css" rel="stylesheet" />
<div class="container-fluid">
    <div class="row mt-2">
    </div>
    <div class="row mt-3">
        <div class="col text-center "><div class="text-uppercase text-success text-center font-weight-bold  border-bottom border-success " style="font-size:40px;">@ViewBag.SanPham_s</div></div>

    </div>
    <div class="row mt-5">
        @foreach (var item in Model)
        {
            <div class="col-3 mb-4 ">
                <div class="card">
                    <img class="card-img-top" height="300" src="/NongPham/Images/@item.AnhSP" />


                    <h4 class=" card-title text-center font-weight-bold" style="font-family:'Lora';padding-top:20px">@item.TenSP</h4>
                    <p class="card-text text-center text-success font-weight-bold" style="height:40px;font-family:'Lora';font-size:20px">@String.Format("{0:0,0}", @item.GiaSP)<span>đ</span></p>
                    <div class="container-fluid">
                        <div class="row p-2 border-top">
                            <div class="col-6 border-right">
                                👁<a href="@Url.Action("ChiTietSanPham", "SanPham", new { @MaSP = item.MaSP })" style="" class=""> Xem chi tiết</a>
                            </div>
                            <div class="col-6">
                                🛒<a href="@Url.Action("ThemGioHang", "GioHang", new { @maSP = item.MaSP, @strURL = Request.Url.ToString() })">Thêm vào giỏ</a>
                            </div>
                        </div>
                    </div>





                </div>
            </div>
        }
    </div>





</div>